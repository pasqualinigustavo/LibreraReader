<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_grey</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColorPrimary">@color/colorGrey3</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@color/colorBackgroundButtonBuy</item>
        <item name="android:color">@color/colorBackgroundButtonBuy</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBackgroundButtonBuy</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorControlNormal">@color/transparent</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.textWhite">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.WhiteAccent2">
        <item name="colorAccent">@color/colorYellow600</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:labelTextSize">19sp</item>
        <item name="android:textSize">15sp</item>
        <item name="hintTextAppearance">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:textColorHighlightInverse">@color/colorWhite</item>
        <item name="android:colorFocusedHighlight">@color/colorWhite</item>
    </style>

    <style name="TSTextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGrey3</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorGrey3</item>
        <item name="colorControlNormal">@color/colorGrey3</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/colorGrey3</item>

    </style>

    <style name="TSEdittext" parent="@android:style/Widget.EditText">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorGrey3</item>
        <item name="android:textColor">@color/colorGrey3</item>

    </style>

    <style name="TSTextLabelWhite" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>


    <style name="StyledIndicatorsWhite" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StyledIndicatorsBlack" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="PagerTabStripText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#a4c639</item>
    </style>


    <style name="navBG">
        <item name="android:background">#60000000</item>
    </style>

    <style name="listBG">
        <item name="android:background">#90000000</item>
    </style>

    <style name="navBGButton">
        <item name="android:tint">@color/tint_white</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>

    <style name="wpButton">
        <item name="android:tint">@color/tint_white</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>

    <style name="wpButtonM0">
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>


    <style name="buttonWhiteInverted">
        <item name="android:background">@drawable/bg_border_white</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
        <item name="android:tint">?android:attr/textColorLink</item>
    </style>


    <style name="buttonWhite">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="buttonWhiteClose" parent="buttonWhite">
        <item name="android:padding">10dip</item>
    </style>

    <style name="textLink">
        <item name="android:padding">5dip</item>
        <item name="android:minEms">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:tag">textLink</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textLinkWhite" parent="textLink">
        <item name="android:tag">textLinkWhite</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textLinkStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
    </style>

    <style name="buttonClear">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">8dip</item>
        <item name="android:tint">@color/tint_gray</item>
    </style>

    <style name="textSection">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dip</item>
        <item name="android:background">#60e1e1e1</item>
    </style>


    <style name="textCircle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_circular</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">A</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
